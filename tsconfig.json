{
  "compilerOptions": {
    // Language and environment
    "target": "ES2020",
    "lib": ["ES2020", "DOM", "DOM.Iterable"],
    "module": "ESNext",
    "moduleResolution": "bundler",

    // Bundler mode
    "allowImportingTsExtensions": true,
    "allowSyntheticDefaultImports": true,
    "isolatedModules": true,
    "noEmit": true,

    // Type checking - strict for API validation
    "strict": true,
    "noImplicitAny": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "noFallthroughCasesInSwitch": true,
    "exactOptionalPropertyTypes": false,
    "noImplicitReturns": true,
    "noUncheckedIndexedAccess": false,
    
    // API deprecation detection
    "types": ["node"],
    "typeRoots": ["./node_modules/@types"],
    "checkJs": true,

    // Module resolution
    "baseUrl": ".",
    "paths": {
      "@/*": ["src/*"],
      "@/assets/*": ["src/assets/*"],
      "@/js/*": ["src/assets/js/*"],
      "@/components/*": ["src/assets/js/components/*"],
      "@/utils/*": ["src/assets/js/utils/*"],
      "@/core/*": ["src/assets/js/core/*"],
      "@/config/*": ["src/assets/js/config/*"],
      "@/types/*": ["src/assets/js/types/*"]
    },

    // Advanced
    "skipLibCheck": false, // Check library types for API validation
    "forceConsistentCasingInFileNames": true,
    "resolveJsonModule": true,
    "esModuleInterop": true,

    // Source maps
    "inlineSourceMap": true,
    "inlineSources": true
  },
  "include": [
    "src/**/*.ts",
    "src/**/*.js",
    "netlify/functions/**/*.ts",
    "scripts/**/*.ts",
    "vite.config.ts",
    ".eleventy.ts",
    "eslint.config.ts",
    "postcss.config.ts"
  ],
  "exclude": [
    "node_modules",
    "_site",
    "dist",
    "src/platform/**/*"
  ]
}