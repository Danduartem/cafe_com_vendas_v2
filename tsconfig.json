{
  "compilerOptions": {
    // Language and environment
    "target": "ES2022",
    "lib": ["ES2022", "DOM", "DOM.Iterable"],
    "module": "ES2022",
    "moduleResolution": "bundler",

    // Bundler mode
    "allowImportingTsExtensions": false,
    "allowSyntheticDefaultImports": true,
    "isolatedModules": true,
    "noEmit": true,
    "verbatimModuleSyntax": true,

    // Essential type checking
    "strict": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "noFallthroughCasesInSwitch": true,
    "noImplicitReturns": true,
    
    // API deprecation detection
    "types": ["node"],
    "typeRoots": ["./node_modules/@types"],
    "checkJs": true,

    // Module resolution
    "baseUrl": ".",
    "paths": {
      "@content/*": ["content/*"],
      "@sections/*": ["src/_includes/sections/*"],
      "@assets/*": ["src/assets/*"],
      "@types/*": ["src/types/*"],
      "@/*": ["src/assets/js/*"]
    },

    // Advanced
    "skipLibCheck": true, // Skip library type checking for faster builds
    "forceConsistentCasingInFileNames": true,
    "resolveJsonModule": true,
    "esModuleInterop": true,

    // Source maps
    "inlineSourceMap": true,
    "inlineSources": true
  },
  "include": [
    "src/**/*.ts",
    "src/**/*.js",
    "tests/**/*.ts",
    "netlify/functions/**/*.ts",
    "scripts/verify-apis.ts",
    "vite.config.ts",
    "vitest.config.ts",
    ".eleventy.ts",
    "eslint.config.ts",
    "types/**/*.d.ts"
  ],
  "exclude": [
    "node_modules",
    "_site",
    "dist",
    "debug-gtm.ts"
  ]
}