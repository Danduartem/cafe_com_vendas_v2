{
  "compilerOptions": {
    // Language and environment optimized for Node 22+
    "target": "ES2023",
    "lib": ["ES2023", "DOM", "DOM.Iterable"],
    "module": "ES2022",
    "moduleResolution": "bundler",

    // Bundler mode
    "allowImportingTsExtensions": true,
    "allowSyntheticDefaultImports": true,
    "isolatedModules": true,
    "noEmit": true,
    "verbatimModuleSyntax": true,

    // Essential type checking
    "strict": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "noFallthroughCasesInSwitch": true,
    "noImplicitReturns": true,
    
    // Runtime environment
    "types": ["node"],

    // Module resolution
    "baseUrl": ".",
    "paths": {
      "@content/*": ["content/*"],
      "@sections/*": ["src/_includes/sections/*"],
      "@components/*": ["src/components/*"],
      "@assets/*": ["src/assets/*"],
      "@types/*": ["src/types/*"],
      "@/*": ["src/assets/js/*"]
    },

    // Performance optimizations
    "incremental": true,
    "tsBuildInfoFile": "node_modules/.cache/ts/typecheck.tsbuildinfo",
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "resolveJsonModule": true,
    "esModuleInterop": true,

    // Source maps
    "inlineSourceMap": true,
    "inlineSources": true
  },
  "include": [
    "src/**/*.ts",
    "scripts/**/*.ts",
    "*.config.ts",
    ".eleventy.ts",
    "types/**/*.d.ts"
  ],
  "exclude": [
    "node_modules",
    "_site",
    "dist",
    "debug-gtm.ts",
    "tests/**/*",
    "netlify/edge-functions/**/*"
  ]
}