<section
  id="thankyou"
  aria-label="Página de agradecimento e próximos passos"
  class="relative isolate w-full min-h-[90vh] bg-gradient-to-b from-neutral-50 via-white to-neutral-50/30 py-20 sm:py-24 lg:py-28"
  data-analytics-section="thankyou"
  data-reveal
>
  <div class="container mx-auto px-4 sm:px-6 lg:px-8 max-w-6xl">
    <!-- Header -->
    <div class="text-center mb-12" data-reveal>
      <div class="inline-flex items-center gap-2 px-5 py-2.5 rounded-full bg-gradient-to-r from-burgundy-50 to-burgundy-100/80 text-burgundy-700 shadow-sm backdrop-blur-sm border border-burgundy-200/30 mb-6">
        <!-- check icon -->
        <svg class="w-5 h-5 text-burgundy-600" fill="none" stroke="currentColor" stroke-width="2.5" viewBox="0 0 24 24" aria-hidden="true">
          <path stroke-linecap="round" stroke-linejoin="round" d="M5 13l4 4L19 7" />
        </svg>
        <span class="text-sm font-semibold tracking-wide uppercase">{{ currentSection.copy.badge.text }}</span>
      </div>

      <h1 class="font-lora font-bold text-[clamp(2.25rem,7vw,3.5rem)] leading-[1.1] text-navy-900 tracking-tight">
        {{ currentSection.copy.header.title | safe }}
      </h1>

      <p class="mt-4 font-century text-[clamp(1.05rem,3vw,1.2rem)] text-navy-600 max-w-[60ch] mx-auto leading-relaxed">
        {{ currentSection.copy.header.subtitle | safe }}
      </p>
    </div>

    <!-- Progress -->
    <div class="mx-auto max-w-2xl mb-10" aria-live="polite" data-reveal>
      <div class="flex items-center justify-between mb-3">
        <span class="font-century text-sm font-medium text-navy-500 uppercase tracking-wider">{{ currentSection.copy.progress.label }}</span>
        <span class="font-century text-sm font-bold text-navy-700" id="progressLabel">{{ currentSection.copy.progress.percentage }}</span>
      </div>
      <div class="w-full h-4 rounded-full bg-gradient-to-r from-neutral-100 to-neutral-200 shadow-inner overflow-hidden" role="progressbar" aria-valuemin="0" aria-valuemax="100" aria-valuenow="{{ currentSection.copy.progress.value }}" aria-labelledby="progressLabel">
        <div id="progressBar" class="h-full bg-gradient-to-r from-burgundy-500 via-burgundy-600 to-navy-700 w-0 transition-all duration-1000 ease-out shadow-sm"></div>
      </div>
      <p class="mt-4 text-center font-lora italic text-[clamp(1rem,2.8vw,1.1rem)] text-burgundy-600">
        {{ currentSection.copy.progress.message }}
      </p>
    </div>

    <!-- Primary Card -->
    <div class="grid lg:grid-cols-12 gap-8 lg:gap-12 items-start">
      <!-- Left: CTA + Steps -->
      <div class="lg:col-span-7" data-reveal>
        <div class="rounded-3xl bg-white shadow-xl p-8 sm:p-10 border border-neutral-200/50 backdrop-blur-sm">
          <div class="flex items-start gap-4 mb-6">
            <div class="flex-shrink-0 w-10 h-10 rounded-full bg-gradient-to-br from-burgundy-500 to-burgundy-600 flex items-center justify-center text-white font-bold shadow-md">
              {{ currentSection.copy.mainAction.stepNumber }}
            </div>
            <div>
              <h2 class="font-lora text-[clamp(1.4rem,3.5vw,1.9rem)] text-navy-900 leading-[1.15] font-bold">
                {{ currentSection.copy.mainAction.title }}
              </h2>
              <p class="mt-2 font-century text-base text-navy-600 leading-relaxed">
                {{ currentSection.copy.mainAction.description }}
              </p>
            </div>
          </div>

          <a
            href="{{ currentSection.copy.mainAction.button.url }}"
            class="inline-flex items-center justify-center px-8 py-4 min-h-[56px] rounded-2xl text-white font-semibold bg-gradient-to-r from-burgundy-600 to-navy-800 hover:from-burgundy-700 hover:to-navy-900 transform hover:scale-[1.02] transition-all duration-200 shadow-lg hover:shadow-xl"
            data-analytics-click="{{ currentSection.copy.mainAction.button.analytics }}"
          >
            <span class="mr-2">{{ currentSection.copy.mainAction.button.text }}</span>
            <svg class="w-5 h-5" fill="none" stroke="currentColor" stroke-width="2" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" d="M13 7l5 5m0 0l-5 5m5-5H6" />
            </svg>
          </a>

          <div class="mt-10 space-y-6">
            {% for step in currentSection.copy.steps %}
            <div class="flex items-start gap-4 p-4 rounded-2xl hover:bg-neutral-50 transition-colors duration-200">
              <div class="flex-shrink-0 w-8 h-8 rounded-full bg-gradient-to-br from-{{ step.color }}-100 to-{{ step.color }}-200 flex items-center justify-center text-{{ step.color }}-700 font-bold text-sm">
                {{ step.number }}
              </div>
              <div class="flex-1">
                <h3 class="font-lora text-navy-800 text-[1.15rem] leading-[1.25] font-semibold mb-1">{{ step.title }}</h3>
                <p class="font-century text-navy-600 leading-relaxed{% if step.button %} mb-3{% endif %}">
                  {{ step.description | safe }}
                </p>
                {% if step.button %}
                <a
                  href="{{ step.button.url }}"
                  class="inline-flex items-center gap-2 px-4 py-2 text-sm font-semibold {{ step.button.classes }}"
                  data-analytics-click="{{ step.button.analytics }}"
                  {% if step.button.target %}target="{{ step.button.target }}"{% endif %}
                  {% if step.button.rel %}rel="{{ step.button.rel }}"{% endif %}
                >
                  {{ step.button.icon | safe }}
                  {{ step.button.text }}
                </a>
                {% endif %}
              </div>
            </div>
            {% endfor %}
          </div>
        </div>
      </div>

      <!-- Right: Event Summary -->
      <aside class="lg:col-span-5" data-reveal>
        <div class="rounded-3xl bg-gradient-to-br from-burgundy-50 via-white to-burgundy-50/30 p-8 border border-burgundy-100/50 shadow-lg backdrop-blur-sm">
          <div class="flex items-center gap-3 mb-6">
            <div class="w-12 h-12 rounded-2xl bg-gradient-to-br from-burgundy-500 to-burgundy-700 flex items-center justify-center shadow-md">
              <svg class="w-6 h-6 text-white" fill="none" stroke="currentColor" stroke-width="2" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" d="M12 8v4l3 3m6-3a9 9 0 11-18 0 9 9 0 0118 0z" />
              </svg>
            </div>
            <div>
              <h3 class="font-lora text-[clamp(1.2rem,3vw,1.5rem)] text-navy-900 leading-[1.15] font-bold">
                {{ currentSection.copy.eventSummary.title }}
              </h3>
              <p class="font-century text-sm text-burgundy-600 font-semibold">
                {{ currentSection.copy.eventSummary.subtitle }}
              </p>
            </div>
          </div>

          <div class="space-y-4">
            {% for feature in currentSection.copy.eventSummary.features %}
            <div class="flex items-start gap-3 p-3 rounded-xl bg-white/70 backdrop-blur-sm">
              <svg class="w-5 h-5 text-burgundy-600 mt-0.5 flex-shrink-0" fill="currentColor" viewBox="0 0 20 20">
                <path fill-rule="evenodd" d="M10 18a8 8 0 100-16 8 8 0 000 16zm3.707-9.293a1 1 0 00-1.414-1.414L9 10.586 7.707 9.293a1 1 0 00-1.414 1.414l2 2a1 1 0 001.414 0l4-4z" clip-rule="evenodd" />
              </svg>
              <div>
                <p class="font-century text-navy-700 leading-relaxed">
                  {{ feature | safe }}
                </p>
              </div>
            </div>
            {% endfor %}
          </div>

          <div class="mt-6 p-4 rounded-2xl bg-gradient-to-r from-burgundy-100/50 to-navy-100/30 border border-burgundy-200/30">
            <p class="font-century text-sm text-navy-700 leading-relaxed">
              {{ currentSection.copy.eventSummary.important | safe }}
            </p>
          </div>
        </div>
      </aside>
    </div>
  </div>

  <!-- Celebration overlay -->
  <div id="celebrationOverlay" class="pointer-events-none fixed inset-0 opacity-0 transition-opacity duration-1000 z-50" aria-hidden="true"></div>
</section>