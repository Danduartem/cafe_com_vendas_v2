{# footer-schema.njk - Organization Schema Markup #}

<script type="application/ld+json">
{
  "@context": "https://schema.org",
  "@type": "Organization",
  "name": "{{ footer.organization.name }}",
  "description": "{{ footer.organization.description }}",
  "url": "{{ footer.organization.url }}",
  "logo": "{{ footer.organization.logo }}",
  "sameAs": [
    {% for social in footer.contact.social %}"{{ social.url }}"{% if not loop.last %},{% endif %}{% endfor %}
  ],
  "contactPoint": {
    "@type": "ContactPoint",
    "telephone": "{{ footer.organization.phone }}",
    "contactType": "customer service",
    "areaServed": "{{ footer.organization.country }}",
    "availableLanguage": ["Portuguese"]
  },
  "founder": {
    "@type": "Person",
    "name": "{{ footer.organization.founderName }}",
    "jobTitle": "{{ footer.organization.founderTitle }}"
  },
  "address": {
    "@type": "PostalAddress",
    "addressLocality": "{{ footer.organization.city }}",
    "addressCountry": "{{ footer.organization.country }}"
  }
}
</script>