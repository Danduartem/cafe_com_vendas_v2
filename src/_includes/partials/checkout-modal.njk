<!-- Standards-compliant dialog CSS -->
<style>
#checkoutModal {
  /* Remove browser defaults */
  border: none;
  padding: 0;
  
  /* Standards-compliant sizing */
  max-inline-size: min(90vw, 32rem);
  max-block-size: min(90vh, 90dvh);
  
  /* Universal styling */
  border-radius: 1.5rem;
  background: white;
  box-shadow: 0 25px 50px -12px rgba(0, 0, 0, 0.25);
}

#checkoutModal::backdrop {
  background-color: rgba(0, 0, 0, 0.5);
  backdrop-filter: blur(2px);
}

/* Content wrapper for proper layout */
#checkoutModal > article {
  display: grid;
  max-block-size: 100%;
  overflow-y: auto;
  overscroll-behavior-y: contain;
  justify-items: stretch;
}

/* Header with flexbox for proper alignment */
#checkoutModal header {
  display: flex;
  flex-wrap: wrap;
  gap: 1rem;
  justify-content: space-between;
  align-items: flex-start;
  padding: 1.5rem;
  border-bottom: 1px solid rgb(209 213 219);
}

/* Modal body content */
#checkoutModal main {
  padding: 1.5rem;
  flex-grow: 1;
}
</style>

