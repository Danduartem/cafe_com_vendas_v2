<!-- FAQ Section -->
<section id="faq" aria-label="{{ faq.meta.section_title }}" class="relative py-20 lg:py-32 overflow-hidden">
  <!-- Simplified Background -->
  <div class="absolute inset-0 bg-gradient-to-br from-neutral-50 to-peach-50/30"></div>
  
  <div class="relative container mx-auto px-4 max-w-4xl">
    <!-- Section Header with Golden Ratio Spacing -->
    <div class="text-center mb-16 lg:mb-20" data-reveal>
      <div class="inline-block mb-6">
        <div class="h-1 w-16 bg-gradient-to-r from-burgundy-500 to-gold-400 rounded-full mx-auto mb-4"></div>
      </div>
      <h2 class="font-lora text-4xl lg:text-5xl font-bold text-navy-800 mb-6 tracking-tight">
        {{ faq.meta.section_title }}
      </h2>
      <p class="font-century text-lg text-navy-600 max-w-2xl mx-auto leading-relaxed">
        {{ faq.meta.section_subtitle }}
      </p>
    </div>

    <!-- Simplified FAQ using native details/summary -->
    <div class="space-y-4" data-reveal data-faq-container>
      {% for item in faq.items %}
      <details class="group relative {% if item.is_special %}bg-gradient-to-br from-white/95 to-gold-50/50 border border-gold-300/40{% else %}bg-white/90 border border-white/50{% endif %} backdrop-blur-sm rounded-2xl shadow-lg {% if item.is_special %}shadow-gold-900/10{% else %}shadow-navy-900/5{% endif %} transition-all duration-300 open:shadow-xl" data-faq-item="{{ item.number }}" data-analytics-event="{{ item.analytics_event }}">
        <summary class="flex items-start justify-between w-full cursor-pointer px-6 py-5 focus:outline-none focus:ring-2 focus:ring-{% if item.is_special %}gold{% else %}burgundy{% endif %}-400/50 focus:ring-offset-2 focus:ring-offset-white">
          <div class="pr-4">
            {% if item.is_special %}
            <span class="inline-flex items-center px-3 py-1 rounded-full text-xs font-semibold bg-gold-100 text-gold-800 border border-gold-200 mb-2">{{ item.special_badge }}</span>
            {% endif %}
            <h3 class="font-lora text-xl lg:text-2xl font-semibold text-navy-800 leading-tight">{{ item.question }}</h3>
            {% if item.hint %}
            <p class="font-century text-sm text-navy-500">{{ item.hint }}</p>
            {% endif %}
          </div>
          <svg id="{{ item.icon_id }}" class="w-6 h-6 text-navy-700 transform transition-transform duration-300 group-open:rotate-45" fill="none" stroke="currentColor" viewBox="0 0 24 24" stroke-width="2.5" aria-hidden="true">
            <path stroke-linecap="round" stroke-linejoin="round" d="M12 6v12M6 12h12"/>
          </svg>
        </summary>
        <div class="px-6 pb-6 overflow-hidden transition-all duration-500 max-h-0 opacity-0 group-open:max-h-[1200px] group-open:opacity-100">
          <p class="font-century text-lg text-navy-800 leading-relaxed mb-{% if item.answer.highlights or item.answer.features or item.answer.highlight %}4{% else %}0{% endif %}">{{ item.answer.main_text | safe }}</p>
          {% if item.answer.highlight %}
          <div class="flex items-start gap-3 text-burgundy-700">
            <svg class="w-5 h-5 mt-0.5 flex-shrink-0" fill="currentColor" viewBox="0 0 24 24" aria-hidden="true"><path d="M9 12l2 2 4-4m6 2a9 9 0 11-18 0 9 9 0 0118 0z"/></svg>
            <p class="font-century text-base text-navy-700"><strong>{{ item.answer.highlight.label }}</strong> {{ item.answer.highlight.text }}</p>
          </div>
          {% endif %}
          {% if item.answer.highlights %}
          <ul class="mt-3 space-y-2">
            {% for highlight in item.answer.highlights %}
            <li class="flex items-start gap-3 text-burgundy-700">
              <svg class="w-5 h-5 mt-0.5 flex-shrink-0" fill="currentColor" viewBox="0 0 24 24" aria-hidden="true">
                {% if highlight.icon == 'star' %}
                <path d="M12 2l3.09 6.26L22 9.27l-5 4.87 1.18 6.88L12 17.77l-6.18 3.25L7 14.14 2 9.27l6.91-1.01L12 2z"/>
                {% else %}
                <path d="M12 2C6.48 2 2 6.48 2 12s4.48 10 10 10 10-4.48 10-10S17.52 2 12 2zm-2 15l-5-5 1.41-1.41L10 14.17l7.59-7.59L19 8l-9 9z"/>
                {% endif %}
              </svg>
              <p class="font-century text-base text-navy-700"><strong>{{ highlight.label }}</strong> {{ highlight.text }}</p>
            </li>
            {% endfor %}
          </ul>
          {% endif %}
          {% if item.answer.features %}
          <ul class="mt-4 space-y-2">
            {% for feature in item.answer.features %}
            <li class="flex items-start gap-3">
              <svg class="w-5 h-5 mt-0.5 flex-shrink-0 text-gold-600" fill="currentColor" viewBox="0 0 24 24" aria-hidden="true"><path d="M12 2C6.48 2 2 6.48 2 12s4.48 10 10 10 10-4.48 10-10S17.52 2 12 2zm-2 15l-5-5 1.41-1.41L10 14.17l7.59-7.59L19 8l-9 9z"/></svg>
              <p class="font-century text-base text-navy-700"><strong>{{ feature.label }}</strong> {{ feature.text }}</p>
            </li>
            {% endfor %}
          </ul>
          {% endif %}
          {% if item.answer.legal_note %}
          <p class="mt-4 pt-4 border-t border-gold-200/50 font-century text-sm text-navy-600 italic">{{ item.answer.legal_note | safe }}</p>
          {% endif %}
          {% if item.answer.cta %}
          <p class="mt-4">
            <a href="{{ item.answer.cta.url }}" class="text-burgundy-700 hover:text-burgundy-800 font-semibold underline decoration-2 underline-offset-2">{{ item.answer.cta.text }}</a>
          </p>
          {% endif %}
        </div>
      </details>
      {% endfor %}
    </div>

    <!-- Premium Call-to-Action Footer -->
    <div class="text-center mt-16 lg:mt-20" data-reveal>
      <!-- Elegant separator line -->
      <div class="w-24 h-px bg-gradient-to-r from-transparent via-gold-300 to-transparent mx-auto mb-8"></div>
      
      <div class="bg-gradient-to-br from-white/80 to-gold-50/60 backdrop-blur-sm rounded-2xl p-8 border border-gold-200/40 shadow-lg">
        <h3 class="font-lora text-2xl font-bold text-navy-800 mb-4">
          Ainda tem dúvidas?
        </h3>
        <p class="font-century text-lg text-navy-600 mb-6 max-w-2xl mx-auto">
          Nossa equipe está pronta para esclarecer qualquer questão sobre este evento transformador
        </p>
        
        <!-- Contact Options -->
        <div class="flex flex-col sm:flex-row items-center justify-center gap-4">
          <a 
            href="{{ faq.contact.whatsapp_url }}" 
            class="inline-flex items-center px-6 py-3 bg-gradient-to-r from-green-500 to-green-600 text-white font-semibold rounded-xl hover:from-green-600 hover:to-green-700 transition-all duration-300 shadow-lg hover:shadow-green-500/30 group"
            data-analytics-event="faq_whatsapp_contact"
            aria-label="Contactar via WhatsApp"
          >
            <svg class="w-5 h-5 mr-2 group-hover:scale-110 transition-transform" fill="currentColor" viewBox="0 0 24 24" aria-hidden="true">
              <path d="M17.472 14.382c-.297-.149-1.758-.867-2.03-.967-.273-.099-.471-.148-.67.15-.197.297-.767.966-.94 1.164-.173.199-.347.223-.644.075-.297-.15-1.255-.463-2.39-1.475-.883-.788-1.48-1.761-1.653-2.059-.173-.297-.018-.458.13-.606.134-.133.298-.347.446-.52.149-.174.198-.298.298-.497.099-.198.05-.371-.025-.52-.075-.149-.669-1.612-.916-2.207-.242-.579-.487-.5-.669-.51-.173-.008-.371-.01-.57-.01-.198 0-.52.074-.792.372-.272.297-1.04 1.016-1.04 2.479 0 1.462 1.065 2.875 1.213 3.074.149.198 2.096 3.2 5.077 4.487.709.306 1.262.489 1.694.625.712.227 1.36.195 1.871.118.571-.085 1.758-.719 2.006-1.413.248-.694.248-1.289.173-1.413-.074-.124-.272-.198-.57-.347m-5.421 7.403h-.004a9.87 9.87 0 01-5.031-1.378l-.361-.214-3.741.982.998-3.648-.235-.374a9.86 9.86 0 01-1.51-5.26c.001-5.45 4.436-9.884 9.888-9.884 2.64 0 5.122 1.03 6.988 2.898a9.825 9.825 0 012.893 6.994c-.003 5.45-4.437 9.884-9.885 9.884m8.413-18.297A11.815 11.815 0 0012.05 0C5.495 0 .16 5.335.157 11.892c0 2.096.547 4.142 1.588 5.945L.057 24l6.305-1.654a11.882 11.882 0 005.683 1.448h.005c6.554 0 11.89-5.335 11.893-11.893A11.821 11.821 0 0020.885 3.488"/>
            </svg>
            Falar no WhatsApp
          </a>
          
          <p class="font-century text-sm text-navy-500">
            {{ faq.contact.response_time }} • {{ faq.contact.whatsapp_name }} • {{ faq.contact.whatsapp_phone }}
          </p>
        </div>
      </div>
      
      <!-- Legal Links -->
      <div class="mt-8 pt-6 border-t border-neutral-200/50">
        <div class="flex flex-wrap items-center justify-center gap-6 text-sm text-navy-500">
          {% for link in faq.legal_links %}
          <a href="{{ link.url }}" class="hover:text-navy-800 transition-colors underline underline-offset-2">
            {{ link.text }}
          </a>
          {% if not loop.last %}<span class="text-neutral-400">•</span>{% endif %}
          {% endfor %}
        </div>
      </div>
    </div>
  </div>
</section>

<!-- Enhanced FAQPage Schema Markup for SEO (Generated from data) -->
<script type="application/ld+json">
{
  "@context": "https://schema.org",
  "@type": "FAQPage",
  "name": "{{ faq.meta.title }}",
  "description": "{{ faq.meta.description }}",
  "url": "{{ site.url }}#faq",
  "mainEntity": [
    {% for item in faq.items %}
    {
      "@type": "Question",
      "name": "{{ item.question }}",
      "acceptedAnswer": {
        "@type": "Answer",
        "text": "{{ item.answer.main_text | striptags }}{% if item.answer.highlight %}. {{ item.answer.highlight.label }}: {{ item.answer.highlight.text }}{% endif %}{% if item.answer.highlights %}{% for highlight in item.answer.highlights %}. {{ highlight.label }}: {{ highlight.text }}{% endfor %}{% endif %}{% if item.answer.features %}{% for feature in item.answer.features %}. {{ feature.label }}: {{ feature.text }}{% endfor %}{% endif %}",
        "upvoteCount": {{ item.upvote_count }}
      }
    }{% if not loop.last %},{% endif %}
    {% endfor %}
  ],
  "author": {
    "@type": "Organization",
    "name": "Café com Vendas",
    "url": "{{ site.url }}"
  },
  "publisher": {
    "@type": "Organization",
    "name": "Café com Vendas",
    "url": "{{ site.url }}"
  }
}
</script>