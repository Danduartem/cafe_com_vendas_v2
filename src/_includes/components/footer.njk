{# footer.njk - Premium Footer with Golden Ratio Design #}

<!-- Footer Section Start -->
<footer 
  id="footer" 
  class="relative w-full overflow-hidden bg-gradient-to-br from-navy-900 via-navy-800 to-navy-900"
  aria-label="Rodapé do site"
  role="contentinfo"
  data-reveal
>
  {# Background Layers #}
  <div class="absolute inset-0 bg-gradient-to-t from-burgundy-900/10 via-transparent to-transparent"></div>
  
  {# Floating Geometric Patterns #}
  <div class="absolute inset-0 opacity-5">
    <div class="absolute top-16 left-8 w-32 h-32 border border-gold-400/20 rounded-full animate-pulse"></div>
    <div class="absolute top-32 right-16 w-16 h-16 bg-burgundy-700/10 rounded-lg rotate-12 animate-bounce"></div>
    <div class="absolute bottom-24 left-32 w-24 h-24 border-2 border-peach-400/10 rotate-45"></div>
    <div class="absolute bottom-16 right-8 w-20 h-20 bg-gradient-to-r from-gold-500/10 to-burgundy-600/10 rounded-full blur-sm animate-pulse"></div>
  </div>
  
  {# Organic SVG Divider #}
  <div class="absolute top-0 left-0 w-full h-16 overflow-hidden">
    <svg class="absolute bottom-0 w-full h-16" viewBox="0 0 1200 120" preserveAspectRatio="none">
      <path d="M0,0V46.29c47.79,22.2,103.59,32.17,158,28,70.36-5.37,136.33-33.31,206.8-37.5C438.64,32.43,512.34,53.67,583,72.05c69.27,18,138.3,24.88,209.4,13.08,36.15-6,69.85-17.84,104.45-29.34C989.49,25,1113-14.29,1200,52.47V0Z" opacity=".25" fill="url(#gradientTop)"></path>
      <defs>
        <linearGradient id="gradientTop" x1="0%" y1="0%" x2="100%" y2="0%">
          <stop offset="0%" class="gradient-stop-navy-start" />
          <stop offset="50%" class="gradient-stop-burgundy-middle" />
          <stop offset="100%" class="gradient-stop-navy-end" />
        </linearGradient>
      </defs>
    </svg>
  </div>

  {# Social Proof Section - Stats from Data Layer #}
  <div class="relative pt-20 pb-8">
    <div class="container mx-auto px-8 md:px-12 max-w-7xl">
      <div class="grid grid-cols-3 gap-8 lg:gap-12 text-center" data-reveal>
        {% for stat in footer.stats %}
          {% set statData = { 
            value: stat.value, 
            label: stat.label, 
            hasCounter: stat.counter 
          } %}
          {% include "partials/footer-stat-card.njk" %}
        {% endfor %}
      </div>
    </div>
  </div>

  {# Main Footer Content - Using Data Layer #}
  <div class="relative py-16" data-reveal>
    <div class="container mx-auto px-8 md:px-12 max-w-7xl">
      
      {# Premium 3-Column Layout with Balanced Distribution #}
      <div class="grid grid-cols-1 md:grid-cols-3 gap-8 md:gap-12 items-start">
        
        {# Brand Column - Main column on mobile, first on desktop #}
        <div class="md:col-span-2 order-1 md:order-1">
          <div class="space-y-8">
            
            {# Premium Brand Logo & Tagline #}
            <div class="space-y-4">
              <div class="flex items-center space-x-4">
                <div class="w-12 h-12 bg-gradient-to-br from-gold-500 to-burgundy-600 rounded-xl flex items-center justify-center">
                  <svg class="w-7 h-7 text-white" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M13 10V3L4 14h7v7l9-11h-7z"/>
                  </svg>
                </div>
                <div>
                  <div class="text-2xl font-lora font-bold bg-gradient-to-r from-white to-gold-200 bg-clip-text text-transparent">
                    {{ footer.brand.name }}
                  </div>
                  <div class="text-sm font-century text-neutral-200 mt-1">
                    {{ footer.brand.tagline }}
                  </div>
                </div>
              </div>
            </div>
            
            {# Premium Description #}
            <div class="space-y-4">
              <p class="text-neutral-200 font-century leading-relaxed max-w-lg">
                {{ footer.brand.description }}
              </p>
              
              {# Guarantee Badge with Pulse Animation #}
              <div class="inline-flex items-center space-x-3 bg-gradient-to-r from-gold-500/20 to-burgundy-600/20 backdrop-blur-sm border border-gold-400/30 rounded-full px-6 py-3">
                <div class="w-6 h-6 bg-gold-500 rounded-full flex items-center justify-center">
                  <svg class="w-4 h-4 text-navy-900" fill="currentColor" viewBox="0 0 20 20">
                    <path fill-rule="evenodd" d="M16.707 5.293a1 1 0 010 1.414l-8 8a1 1 0 01-1.414 0l-4-4a1 1 0 011.414-1.414L8 12.586l7.293-7.293a1 1 0 011.414 0z" clip-rule="evenodd"/>
                  </svg>
                </div>
                <span class="text-sm font-century text-gold-300 font-medium">{{ footer.brand.guarantee }}</span>
              </div>
            </div>
            
          </div>
        </div>
        
        {# Navigation Column - Using Data Layer #}
        <div class="md:col-span-1 order-2 md:order-2">
          <div class="space-y-6">
            
            <h3 class="text-lg font-lora font-semibold text-white mb-4">Links</h3>
            
            {# Glassmorphism Navigation Card #}
            <div class="backdrop-blur-md bg-white/5 border border-white/10 rounded-2xl p-8 hover:bg-white/10 transition-all duration-500">
              <nav aria-label="Links legais" class="space-y-6">
                {% for link in footer.navigation.legal %}
                <a 
                  href="{{ link.url }}" 
                  class="group flex items-center justify-between font-century text-neutral-200 hover:text-gold-400 transition-all duration-300 focus:outline-none focus:ring-2 focus:ring-gold-400/50 focus:ring-offset-2 focus:ring-offset-transparent rounded-lg p-2 hover:bg-white/5"
                  data-analytics-event="click_footer_legal"
                >
                  <span>{{ link.label }}</span>
                  <svg class="w-4 h-4 opacity-0 group-hover:opacity-100 transform translate-x-0 group-hover:translate-x-1 transition-all duration-300" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5l7 7-7 7"/>
                  </svg>
                </a>
                {% endfor %}
              </nav>
            </div>
            
          </div>
        </div>
        
        {# Contact Column - Using Social Links Component #}
        <div class="md:col-span-1 order-3 md:order-3">
          <div class="space-y-6">
            
            <h3 class="text-lg font-lora font-semibold text-white mb-4">Contato</h3>
            
            {% include "partials/footer-social-links.njk" %}
            
          </div>
        </div>
        
      </div>
    </div>
  </div>
  
  {# Bottom Copyright Section - Using Data Layer #}
  <div class="relative border-t border-white/10 py-12">
    <div class="container mx-auto px-8 md:px-12 max-w-7xl">
      <div class="flex flex-col md:flex-row justify-between items-center space-y-6 md:space-y-0 md:space-x-8">
        
        <div class="text-sm font-century text-neutral-200">
          © {{ footer.copyright.year }} {{ footer.copyright.owner }}. {{ footer.copyright.text }}.
        </div>
        
        <div class="flex items-center space-x-2 text-sm font-century text-neutral-200">
          <span>Feito com</span>
          <svg class="w-4 h-4 text-burgundy-400 animate-pulse" fill="currentColor" viewBox="0 0 20 20" aria-label="coração">
            <path fill-rule="evenodd" d="M3.172 5.172a4 4 0 015.656 0L10 6.343l1.172-1.171a4 4 0 115.656 5.656L10 17.657l-6.828-6.829a4 4 0 010-5.656z" clip-rule="evenodd"/>
          </svg>
          <span>em Portugal</span>
        </div>
        
      </div>
    </div>
  </div>
  
  {# Schema.org Organization Markup #}
  {% include "partials/footer-schema.njk" %}
</footer>
<!-- Footer Section End -->