{% from "partials/icons.njk" import pillarIcon %}
<!-- Solution Section -->
<section
  id="s-solution"
  data-section="solution"
  aria-label="{{ currentSection.copy.headline }} - 5 pilares para vender mais trabalhando menos"
  data-analytics-section="solution"
  class="relative overflow-hidden py-12 scroll-mt-14"
  data-scroll-offset
>
  <div class="absolute inset-0 bg-gradient-to-br from-neutral-50 via-white to-peach-100/30"></div>

  <div class="relative z-10 max-w-[1400px] mx-auto px-4 sm:px-6 lg:px-8">
    <div class="text-center max-w-4xl mx-auto mb-20" data-reveal>
      
{% set target = 'Seja Livre?' %}
{% set wrapped = '<span class="relative inline-block font-lora font-bold text-burgundy-700">Seja Livre?<span class="pointer-events-none absolute -bottom-1 left-0 w-full h-0.5 bg-gradient-to-r from-gold-500/60 to-burgundy-700/60 rounded-full"></span></span>' %}

<h2 class="font-lora font-bold mb-8 text-navy-800 text-3xl sm:text-4xl lg:text-5xl xl:text-6xl leading-[1.1]">
  {{ currentSection.copy.headline | replace(target, wrapped) | safe }}
</h2>

</h2>
      
      <p class="font-century text-navy-800 text-[--text-lead] leading-[--leading-base] mb-8 max-w-[65ch] mx-auto font-medium">
        {{ currentSection.copy.subhead }}
      </p>
      
      <div class="font-century text-navy-800/70 text-[--text-body] leading-[--leading-relaxed] max-w-[65ch] mx-auto mb-16">
        {{ currentSection.copy.description | safe }}
      </div>
    </div>

    {% set pillarClasses = "group relative" %}
    {% set cardClasses = "relative h-full bg-white rounded-2xl p-8 transition-all duration-500 hover:-translate-y-2 hover:shadow-2xl active:-translate-y-1 active:shadow-xl overflow-hidden touch-manipulation" %}
    {% set iconContainerClasses = "relative flex items-center justify-center w-20 h-20 rounded-full bg-gradient-to-br from-neutral-50 to-white shadow-md group-hover:shadow-xl transition-all duration-300" %}

    <div class="relative" data-reveal>
      <div class="grid md:grid-cols-2 lg:grid-cols-3 gap-8 mb-10">
        {% for pillar in currentSection.copy.pillars %}
        {% if loop.index <= 3 %}
        <div class="{{ pillarClasses }} [animation-delay:{{ loop.index * 150 }}ms]" data-analytics-event="pillar_{{ loop.index }}_view">
          <div class="{{ cardClasses }}">
            <div class="absolute inset-0 rounded-2xl bg-gradient-to-br from-gold-500/10 via-transparent to-burgundy-700/10 opacity-0 group-hover:opacity-100 transition-opacity duration-500 pillar-gradient"></div>
            
            <div class="absolute top-6 right-6 font-lora text-6xl font-bold text-peach-100 select-none">{{ pillar.number }}</div>
            
            <div class="relative flex flex-col items-center text-center">
              <div class="{{ iconContainerClasses }} pillar-icon mb-6">
                <div class="absolute inset-0 rounded-full bg-gradient-to-br from-gold-500/10 to-burgundy-700/10 opacity-0 group-hover:opacity-100 transition-opacity duration-300"></div>
                {{ pillarIcon(pillar.icon) }}
              </div>
              
              <h3 class="font-lora font-bold text-[1.25rem] text-navy-800 mb-4 leading-[--leading-heading] transition-colors duration-300 group-hover:text-burgundy-700">
                {{ pillar.title }}
              </h3>
              
              <p class="font-century text-navy-800/70 text-[--text-body] leading-[--leading-base] max-w-[30ch]">
                {{ pillar.description }}
              </p>
            </div>
          </div>
        </div>
        {% endif %}
        {% endfor %}
      </div>

      <div class="grid md:grid-cols-2 gap-8 max-w-[800px] mx-auto">
        {% for pillar in currentSection.copy.pillars %}
        {% if loop.index > 3 %}
        <div class="{{ pillarClasses }} [animation-delay:{{ loop.index * 150 }}ms]" data-analytics-event="pillar_{{ loop.index }}_view">
          <div class="{{ cardClasses }}">
            <div class="absolute inset-0 rounded-2xl bg-gradient-to-br from-gold-500/10 via-transparent to-burgundy-700/10 opacity-0 group-hover:opacity-100 transition-opacity duration-500 pillar-gradient"></div>
            
            <div class="absolute top-6 right-6 font-lora text-6xl font-bold text-peach-100 select-none">{{ pillar.number }}</div>
            
            <div class="relative flex flex-col items-center text-center">
              <div class="{{ iconContainerClasses }} pillar-icon mb-6">
                <div class="absolute inset-0 rounded-full bg-gradient-to-br from-gold-500/10 to-burgundy-700/10 opacity-0 group-hover:opacity-100 transition-opacity duration-300"></div>
                {{ pillarIcon(pillar.icon) }}
              </div>
              
              <h3 class="font-lora font-bold text-[1.25rem] text-navy-800 mb-4 leading-[--leading-heading] transition-colors duration-300 group-hover:text-burgundy-700">
                {{ pillar.title }}
              </h3>
              
              <p class="font-century text-navy-800/70 text-[--text-body] leading-[--leading-base] max-w-[30ch]">
                {{ pillar.description }}
              </p>
            </div>
          </div>
        </div>
        {% endif %}
        {% endfor %}
      </div>
    </div>

    <div class="relative mt-12" data-reveal>
      
      <div class="text-center">
        
        <button type="button"
                data-checkout-trigger
                data-source="solution"
                class="inline-flex items-center justify-center px-6 py-3 min-h-[48px] rounded-xl bg-burgundy-700 text-white font-century font-semibold text-sm shadow-lg transform-gpu transition-all duration-300 hover:bg-burgundy-800 hover:shadow-xl hover:scale-[1.02] focus:outline-none focus:ring-3 focus:ring-burgundy-500/30 active:scale-[0.98]"
                data-analytics-event="click_solution_cta"
                aria-label="Conhecer os 5 pilares em detalhe - abrir modal de inscrição">
          {{ currentSection.copy.cta.label }}
          <svg class="w-5 h-5 ml-2" fill="none" stroke="currentColor" viewBox="0 0 24 24" aria-hidden="true">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2.2" d="M13 7l5 5m0 0l-5 5m5-5H6"></path>
          </svg>
        </button>
        
        <div class="mt-8 relative">
          <p class="font-century text-navy-800/70 text-[--text-body] leading-[--leading-relaxed] max-w-[65ch] mx-auto">
            {{ currentSection.copy.supportingText | safe }}
          </p>
          </div>
        </div>
      </div>
    </div>

  </div>
</section>
<!-- Solution Section End -->