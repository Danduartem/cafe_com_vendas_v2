{# faq.njk - FAQ Section Template #}

<!-- FAQ Section Start -->
<section
  id="s-faq"
  data-section="faq"
  aria-label="{{ currentSection.copy.headline }}"
  class="relative py-20 lg:py-32 overflow-hidden"
 data-analytics-section="faq">
  <!-- Background -->
  <div class="absolute inset-0 bg-gradient-to-br from-neutral-50 to-peach-50/30"></div>
  
  <div class="relative container mx-auto px-4 max-w-4xl">
    <!-- Section Header -->
    <div class="text-center mb-16 lg:mb-20" data-reveal>
      <div class="inline-block mb-6">
        <div class="h-1 w-16 bg-gradient-to-r from-burgundy-500 to-gold-400 rounded-full mx-auto mb-4"></div>
      </div>
      <h2 class="font-lora text-4xl lg:text-5xl font-bold text-navy-800 mb-6 tracking-tight">
        {{ currentSection.copy.headline }}
      </h2>
      <p class="font-century text-lg text-navy-600 max-w-2xl mx-auto leading-relaxed">
        {{ currentSection.copy.subhead }}
      </p>
    </div>

    <!-- FAQ Items -->
    <div class="space-y-4" data-reveal data-faq-container>
      {% for item in currentSection.items %}
      <details class="group relative {% if item.is_special %}bg-gradient-to-br from-white/95 to-gold-50/50 border border-gold-300/40{% else %}bg-white/90 border border-white/50{% endif %} backdrop-blur-sm rounded-2xl shadow-lg {% if item.is_special %}shadow-gold-900/10{% else %}shadow-navy-900/5{% endif %} transition-all duration-300 open:shadow-xl" data-faq-item="{{ item.number }}" data-analytics-event="{{ item.analytics_event }}">
        <summary class="flex items-start justify-between w-full cursor-pointer px-6 py-5 focus:outline-none focus:ring-2 focus:ring-{% if item.is_special %}gold{% else %}burgundy{% endif %}-400/50 focus:ring-offset-2 focus:ring-offset-white">
          <div class="pr-4">
            {% if item.is_special %}
            <span class="inline-flex items-center px-3 py-1 rounded-full text-xs font-semibold bg-gold-100 text-gold-800 border border-gold-200 mb-3">{{ item.special_badge }}</span>
            {% endif %}
            <h3 class="font-lora text-xl lg:text-2xl font-semibold text-navy-800 leading-tight mb-2">{{ item.question }}</h3>
            {% if item.description %}
            <p class="font-century text-sm text-{% if item.is_special %}gold{% else %}burgundy{% endif %}-600 leading-relaxed">{{ item.description }}</p>
            {% endif %}
          </div>
          <div class="flex-shrink-0">
            <svg class="w-6 h-6 text-{% if item.is_special %}gold{% else %}burgundy{% endif %}-500 transform transition-transform duration-300 group-open:rotate-45" fill="none" stroke="currentColor" viewBox="0 0 24 24" stroke-width="2.5" aria-hidden="true">
              <path stroke-linecap="round" stroke-linejoin="round" d="M12 6v12M6 12h12"/>
            </svg>
          </div>
        </summary>
        <div class="px-6 pb-6 overflow-hidden transition-all duration-500 max-h-0 opacity-0 group-open:max-h-[1200px] group-open:opacity-100">
          <p class="font-century text-lg text-navy-800 leading-relaxed mb-{% if item.answer.highlights or item.answer.features or item.answer.highlight %}4{% else %}0{% endif %}">{{ item.answer.main_text | safe }}</p>
          {% if item.answer.highlight %}
          <div class="p-4 bg-{% if item.is_special %}gold{% else %}burgundy{% endif %}-50/50 border border-{% if item.is_special %}gold{% else %}burgundy{% endif %}-200/30 rounded-xl mb-4">
            <p class="font-century text-base text-{% if item.is_special %}gold{% else %}burgundy{% endif %}-800 leading-relaxed">{{ item.answer.highlight | safe }}</p>
          </div>
          {% endif %}
          {% if item.answer.features_with_labels %}
          <ul class="space-y-3 mt-4">
            {% for feature in item.answer.features_with_labels %}
            <li class="flex items-start gap-3">
              <div class="flex-shrink-0 mt-1">
                <svg class="w-5 h-5 text-{% if item.is_special %}gold{% else %}burgundy{% endif %}-500" fill="currentColor" viewBox="0 0 20 20" aria-hidden="true">
                  <path fill-rule="evenodd" d="M10 18a8 8 0 100-16 8 8 0 000 16zm3.857-9.809a.75.75 0 00-1.214-.882l-3.236 4.53L7.53 10.23a.75.75 0 00-1.06 1.061l2.5 2.5a.75.75 0 001.137-.089l4-5.5z" clip-rule="evenodd"/>
                </svg>
              </div>
              <p class="font-century text-base text-navy-700 leading-relaxed">
                <strong class="text-navy-800">{{ feature.label }}</strong> {{ feature.text }}
              </p>
            </li>
            {% endfor %}
          </ul>
          {% endif %}
          {% if item.answer.features %}
          <ul class="space-y-3 mt-4">
            {% for feature in item.answer.features %}
            <li class="flex items-start gap-3">
              <div class="flex-shrink-0 mt-1">
                <svg class="w-5 h-5 text-{% if item.is_special %}gold{% else %}burgundy{% endif %}-500" fill="currentColor" viewBox="0 0 20 20" aria-hidden="true">
                  <path fill-rule="evenodd" d="M10 18a8 8 0 100-16 8 8 0 000 16zm3.857-9.809a.75.75 0 00-1.214-.882l-3.236 4.53L7.53 10.23a.75.75 0 00-1.06 1.061l2.5 2.5a.75.75 0 001.137-.089l4-5.5z" clip-rule="evenodd"/>
                </svg>
              </div>
              <p class="font-century text-base text-navy-700 leading-relaxed">
                <strong class="text-navy-800">{{ feature }}</strong>
              </p>
            </li>
            {% endfor %}
          </ul>
          {% endif %}
          {% if item.answer.highlights %}
          <ul class="space-y-2 mt-4">
            {% for highlight in item.answer.highlights %}
            <li class="flex items-start gap-3">
              <svg class="w-5 h-5 text-{% if item.is_special %}gold{% else %}burgundy{% endif %}-500 mt-0.5 flex-shrink-0" fill="currentColor" viewBox="0 0 20 20" aria-hidden="true">
                <path fill-rule="evenodd" d="M10 18a8 8 0 100-16 8 8 0 000 16zm3.707-9.293a1 1 0 00-1.414-1.414L9 10.586 7.707 9.293a1 1 0 00-1.414 1.414l2 2a1 1 0 001.414 0l4-4z" clip-rule="evenodd"/>
              </svg>
              <span class="font-century text-base text-navy-800">{{ highlight | safe }}</span>
            </li>
            {% endfor %}
          </ul>
          {% endif %}
          {% if item.answer.footer_text %}
          <p class="font-century text-sm text-navy-600 mt-4">{{ item.answer.footer_text | safe }}</p>
          {% endif %}
        </div>
      </details>
      {% endfor %}
    </div>

    <!-- Contact Section - "Ainda tem dúvidas?" -->
    <div class="mt-16" data-reveal>
      <div class="bg-gradient-to-br from-neutral-50 to-white rounded-3xl shadow-lg border border-neutral-100 p-8 lg:p-12 text-center">
        <h3 class="font-lora text-2xl lg:text-3xl font-semibold text-navy-800 mb-4">
          Ainda tem dúvidas?
        </h3>
        <p class="font-century text-base lg:text-lg text-navy-600 leading-relaxed mb-8 max-w-2xl mx-auto">
          Nossa equipe está pronta para esclarecer qualquer questão sobre este evento transformador
        </p>
        
        <div class="flex flex-col items-center gap-4 mb-8">
          <a 
            href="{{ currentSection.contact.whatsapp_url }}" 
            class="inline-flex items-center gap-2 bg-green-500 hover:bg-green-600 text-white font-semibold py-3 px-8 rounded-full transition-all duration-300 shadow-md hover:shadow-lg transform hover:-translate-y-0.5"
            target="_blank"
            rel="noopener noreferrer"
            data-analytics-event="faq_whatsapp_contact">
            <svg class="w-5 h-5" fill="currentColor" viewBox="0 0 24 24" aria-hidden="true">
              <path d="M17.472 14.382c-.297-.149-1.758-.867-2.03-.967-.273-.099-.471-.148-.67.15-.197.297-.767.966-.94 1.164-.173.199-.347.223-.644.075-.297-.15-1.255-.463-2.39-1.475-.883-.788-1.48-1.761-1.653-2.059-.173-.297-.018-.458.13-.606.134-.133.298-.347.446-.52.149-.174.198-.298.298-.497.099-.198.05-.371-.025-.52-.075-.149-.669-1.612-.916-2.207-.242-.579-.487-.5-.669-.51-.173-.008-.371-.01-.57-.01-.198 0-.52.074-.792.372-.272.297-1.04 1.016-1.04 2.479 0 1.462 1.065 2.875 1.213 3.074.149.198 2.096 3.2 5.077 4.487.709.306 1.262.489 1.694.625.712.227 1.36.195 1.871.118.571-.085 1.758-.719 2.006-1.413.248-.694.248-1.289.173-1.413-.074-.124-.272-.198-.57-.347m-5.421 7.403h-.004a9.87 9.87 0 01-5.031-1.378l-.361-.214-3.741.982.998-3.648-.235-.374a9.86 9.86 0 01-1.51-5.26c.001-5.45 4.436-9.884 9.888-9.884 2.64 0 5.122 1.03 6.988 2.898a9.825 9.825 0 012.893 6.994c-.003 5.45-4.437 9.884-9.885 9.884m8.413-18.297A11.815 11.815 0 0012.05 0C5.495 0 .16 5.335.157 11.892c0 2.096.547 4.142 1.588 5.945L.057 24l6.305-1.654a11.882 11.882 0 005.683 1.448h.005c6.554 0 11.89-5.335 11.893-11.893A11.821 11.821 0 0020.885 3.382"/>
            </svg>
            Falar no WhatsApp
          </a>
          <p class="font-century text-sm text-navy-500">
            {{ currentSection.contact.response_time }} • {{ currentSection.contact.whatsapp_name }} • {{ currentSection.contact.whatsapp_phone }}
          </p>
        </div>
        
        <!-- Legal Links -->
        <div class="text-sm text-center pt-6 border-t border-neutral-200">
          {% for link in currentSection.legal_links %}
          <a 
            href="{{ link.url }}" 
            class="text-navy-600 hover:text-burgundy-600 transition-colors duration-300 underline-offset-4 hover:underline"
            data-analytics-event="faq_legal_link_{{ link.text | lower | replace(' ', '_') }}">
            {{ link.text }}
          </a>
          {% if not loop.last %}
          <span class="text-navy-400 mx-3">•</span>
          {% endif %}
          {% endfor %}
        </div>
      </div>
    </div>
  </div>
</section>
<!-- FAQ Section End -->