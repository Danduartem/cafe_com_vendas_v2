{
  "$schema": "https://json.schemastore.org/claude-code-settings.json",
  "includeCoAuthoredBy": false,
  "cleanupPeriodDays": 30,
  "permissions": {
    "defaultMode": "default",
    "allow": [
      "Bash(npm run *)",
      "Bash(git *)",
      "Bash(node scripts/*)",
      "Bash(netlify *)",
      "Bash(stripe *)",
      "Bash(tsx scripts/*)",
      "Bash(npx *)"
    ],
    "ask": [
      "Bash(npm install*)",
      "Bash(npm update*)",
      "Bash(npm uninstall*)",
      "Bash(git push*)",
      "Bash(rm -r*)"
    ],
    "deny": [
      "Bash(rm -rf /)",
      "Bash(rm package*.json)",
      "Bash(rm tsconfig.json)",
      "Bash(rm CLAUDE.md)",
      "Bash(rm .env*)",
      "Bash(rm -rf .git)"
    ]
  },
  "env": {
    "PROJECT_TYPE": "landing-page",
    "PROJECT_LANGUAGE": "pt-PT",
    "TARGET_AUDIENCE": "female-entrepreneurs",
    "FRAMEWORK": "eleventy",
    "CSS_FRAMEWORK": "tailwind-v4",
    "BUILD_TOOL": "vite",
    "PAYMENT_PROVIDER": "stripe",
    "NODE_VERSION": "22.17.1"
  }
}
