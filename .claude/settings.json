{
  "$schema": "https://json.schemastore.org/claude-code-settings.json",
  "includeCoAuthoredBy": false,
  "permissions": {
    "defaultMode": "default",
    "allow": [
      "Bash(npm run dev)",
      "Bash(npm run build)",
      "Bash(npm run start)",
      "Bash(npm run clean)",
      "Bash(npm run tokens:build)",
      "Bash(npm run build:css)",
      "Bash(npm run build:js*)",
      "Bash(npm run eleventy*)",
      "Bash(npm run lint*)",
      "Bash(npm run lighthouse*)",
      "Bash(npm run versions)",
      "Bash(npm run outdated)",
      "Bash(npm install*)",
      "Bash(npm update)",
      "Bash(git status)",
      "Bash(git diff*)",
      "Bash(git add*)",
      "Bash(git commit*)",
      "Bash(git push*)",
      "Bash(git log*)",
      "Bash(git branch*)",
      "Bash(git checkout*)",
      "Bash(node scripts/*)",
      "Bash(netlify *)",
      "Bash(stripe *)"
    ],
    "deny": [
      "Bash(rm -rf *)",
      "Bash(sudo *)",
      "Bash(rm package.json)",
      "Bash(rm CLAUDE.md)",
      "Bash(rm .env*)"
    ]
  },
  "env": {
    "NODE_ENV": "development",
    "PROJECT_TYPE": "landing-page",
    "PROJECT_LANGUAGE": "pt-PT",
    "TARGET_AUDIENCE": "female-entrepreneurs",
    "FRAMEWORK_PRIMARY": "eleventy",
    "CSS_FRAMEWORK": "tailwind-v4",
    "BUILD_TOOL": "vite",
    "PAYMENT_PROVIDER": "stripe"
  }
}