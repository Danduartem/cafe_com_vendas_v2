{
  "$schema": "https://json.schemastore.org/claude-code-settings.json",
  "permissions": {
    "allow": [
      "Bash(git commit:*)",
      "Bash(git add:*)",
      "WebFetch(domain:docs.firecrawl.dev)",
      "Bash(env)",
      "mcp__context7__resolve-library-id",
      "Bash(npm run type-check:*)",
      "Read(//Users/danielmenezes/Library/Application Support/Code/User/**)",
      "Bash(grep:*)",
      "mcp__playwright-mcp__browser_navigate",
      "Bash(netlify dev:*)",
      "Read(//Applications/**)",
      "Bash(npm run build:*)",
      "Bash(lsof:*)",
      "mcp__playwright-mcp__browser_click",
      "mcp__playwright-mcp__browser_take_screenshot",
      "mcp__playwright-mcp__browser_evaluate",
      "mcp__playwright-mcp__browser_snapshot",
      "Bash(npm run dev)",
      "Bash(mkdir:*)",
      "WebFetch(domain:github.com)",
      "Bash(curl:*)",
      "mcp__playwright-mcp__browser_resize",
      "mcp__playwright-mcp__browser_console_messages",
      "mcp__playwright-mcp__browser_close",
      "Bash(git rm:*)",
      "WebFetch(domain:localhost)",
      "mcp__playwright-mcp__browser_press_key",
      "Bash(npm run serve:*)",
      "Bash(npm run:*)",
      "mcp__playwright-mcp__browser_type",
      "Bash(npx playwright show-report:*)",
      "Bash(npm test)",
      "Bash(pkill:*)",
      "Bash(test:*)",
      "Bash(npx playwright test:*)",
      "Bash(npx playwright test --reporter=list)",
      "Bash(BROWSER=none netlify dev --port=8888)",
      "WebFetch(domain:stackoverflow.com)",
      "Read(/Users/**)",
      "WebFetch(domain:raw.githubusercontent.com)",
      "mcp__playwright-mcp__browser_wait_for",
      "mcp__firecrawl__firecrawl_scrape",
      "mcp__playwright-mcp__browser_fill_form",
      "Bash(npx playwright test tests/e2e/multibanco-complete-flow.test.ts --project=chromium)",
      "WebFetch(domain:developers.mailerlite.com)",
      "Bash(find:*)",
      "Bash(sed:*)",
      "Bash(git log:*)",
      "Bash(git fetch:*)",
      "Bash(git rev-list:*)",
      "Bash(git push:*)",
      "Read(/Users/danielmenezes/.claude/**)",
      "WebSearch",
      "Bash(chmod:*)",
      "Bash(./context7-reminder.sh:*)",
      "Bash(npm test:*)",
      "WebFetch(domain:vite.dev)",
      "mcp__context7__get-library-docs",
      "Bash(node:*)",
      "Bash(timeout 10s npm run dev)",
      "Bash(time npm run build)",
      "Bash(/dev/null)",
      "mcp__firecrawl__firecrawl_search"
    ]
  },
  "enabledMcpjsonServers": [
    "playwright-mcp"
  ],
  "hooks": {
    "SessionStart": [
      {
        "hooks": [
          {
            "type": "command",
            "command": "$CLAUDE_PROJECT_DIR/.claude/hooks/session-info.sh"
          }
        ]
      }
    ],
    "PreToolUse": [
      {
        "matcher": "Write|Edit|MultiEdit",
        "hooks": [
          {
            "type": "command",
            "command": "$CLAUDE_PROJECT_DIR/.claude/hooks/context7-reminder.sh"
          }
        ]
      }
    ],
    "PostToolUse": [
      {
        "matcher": "Write|Edit|MultiEdit",
        "hooks": [
          {
            "type": "command",
            "command": "$CLAUDE_PROJECT_DIR/.claude/hooks/auto-format-posttool.sh"
          }
        ]
      }
    ]
  },
  "outputStyle": "Explanatory"
}