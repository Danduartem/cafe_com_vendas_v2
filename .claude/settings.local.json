{
  "$schema": "https://json.schemastore.org/claude-code-settings.json",
  "permissions": {
    "allow": [
      "Bash(diff *)",
      "Bash(rm *)",
      "Bash(mv *)",
      "Bash(cp *)",
      "Bash(touch *)",
      "Bash(mkdir *)",
      "Bash(chmod *)",
      "Bash(curl *)",
      "Bash(tree *)",
      "Bash(lsof *)",
      "Bash(find *)",
      "Bash(sed *)",
      "Bash(grep *)",
      "Bash(npm outdated)",
      "Bash(npx lighthouse *)",
      "Bash(netlify dev*)",
      "Bash(netlify functions:*)",
      "Bash(stripe listen *)",
      "Bash(claude mcp:*)",
      "mcp__playwright-mcp__*",
      "mcp__context7__*",
      "mcp__firecrawl__*",
      "WebSearch",
      "WebFetch(domain:docs.stripe.com)",
      "mcp__playwright-mcp__browser_fill_form"
    ],
    "deny": [],
    "ask": []
  },
  "hooks": {
    "Notification": [
      {
        "hooks": [
          {
            "type": "command",
            "command": "$CLAUDE_PROJECT_DIR/.claude/hooks/notify-waiting.sh"
          }
        ]
      }
    ],
    "PostToolUse": [
      {
        "matcher": "Write|Edit|MultiEdit",
        "hooks": [
          {
            "type": "command",
            "command": "$CLAUDE_PROJECT_DIR/.claude/hooks/auto-format-posttool.sh"
          }
        ]
      }
    ]
  },
  "outputStyle": "Explanatory"
}