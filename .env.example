# ============================================================================
# FRONTEND (VITE_ prefix = exposed to browser)
# ============================================================================

# Stripe Publishable Key
# Get from: https://dashboard.stripe.com/apikeys
VITE_STRIPE_PUBLIC_KEY=pk_test_your_publishable_key_here

# GTM Container ID (handles all analytics)
# Default: GTM-T63QRLFT
VITE_GTM_CONTAINER_ID=GTM-T63QRLFT

# Cloudinary CDN (image optimization)
# Default: ds4dhbneq
VITE_CLOUDINARY_CLOUD_NAME=ds4dhbneq

# Formspree (contact form fallback)
# Default: xanbnrvp
VITE_FORMSPREE_FORM_ID=xanbnrvp

# ============================================================================
# BACKEND (server-side only - NEVER expose)
# ============================================================================

# Stripe Secret Keys
# Get from: https://dashboard.stripe.com/apikeys
STRIPE_SECRET_KEY=sk_test_your_secret_key_here
STRIPE_WEBHOOK_SECRET=whsec_your_webhook_secret_here

# MailerLite (email automation)
# Get from: https://dashboard.mailerlite.com/integrations/api
MAILERLITE_API_KEY=your_jwt_token_here
MAILERLITE_GROUP_ID=cafe-com-vendas

