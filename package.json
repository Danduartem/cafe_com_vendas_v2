{
  "name": "cafe-com-vendas-landing",
  "version": "1.0.0",
  "description": "Landing page for Café com Vendas event - an intimate business event for female entrepreneurs in Portugal",
  "type": "module",
  "private": true,
  "engines": {
    "node": ">=22.17.1",
    "npm": ">=10.0.0"
  },
  "engineStrict": true,
  "scripts": {
    "dev": "eleventy --serve --watch --config=.eleventy.mjs",
    "dev:vite": "vite build --watch",
    "dev:eleventy": "eleventy --serve --watch --config=.eleventy.mjs",
    "dev:watch": "concurrently \"npm:dev:vite\" \"npm:dev:eleventy\"",
    "netlify:dev": "NODE_NO_WARNINGS=1 BROWSER=none netlify dev",
    "netlify:dev:chrome": "NODE_NO_WARNINGS=1 BROWSER=none netlify dev & sleep 3 && open -a 'Google Chrome' http://localhost:8888",
    "build": "rm -rf _site && NODE_ENV=production vite build && eleventy --config=.eleventy.mjs",
    "preview": "npm run build && npx serve _site",
    "lint": "eslint .",
    "lint:fix": "eslint . --fix",
    "type-check": "tsc --noEmit --pretty false",
    "test": "vitest run",
    "test:e2e": "npx playwright test",
    "test:e2e:report": "npx playwright show-report reports/playwright/html",
    "lighthouse": "mkdir -p reports && npx lighthouse --output=json,html --output-path=reports/lighthouse",
    "prepare": "husky install"
  },
  "keywords": [
    "landing-page",
    "eleventy",
    "11ty",
    "entrepreneurship",
    "business-event",
    "portugal"
  ],
  "author": "Café com Vendas",
  "license": "ISC",
  "dependencies": {
    "@stripe/stripe-js": "^7.8.0",
    "stripe": "^18.4.0"
  },
  "devDependencies": {
    "@11ty/eleventy": "^3.1.2",
    "@eslint/js": "^9.34.0",
    "@playwright/test": "^1.55.0",
    "@tailwindcss/vite": "^4.1.12",
    "@types/node": "^24.3.0",
    "concurrently": "^9.1.2",
    "dotenv": "^17.2.1",
    "eslint": "^9.34.0",
    "globals": "^16.3.0",
    "happy-dom": "^18.0.1",
    "msw": "^2.10.5",
    "tailwindcss": "^4.1.12",
    "tsx": "^4.20.5",
    "typescript": "^5.9.2",
    "typescript-eslint": "^8.40.0",
    "vite": "^7.1.3",
    "vitest": "^3.2.4",
    "husky": "^9.1.6",
    "lint-staged": "^15.2.10"
  }
  ,
  "lint-staged": {
    "*.{js,ts}": [
      "eslint --fix"
    ]
  }
}
