{
  "name": "cafe-com-vendas-landing",
  "version": "1.0.0",
  "description": "Landing page for Café com Vendas event - an intimate business event for female entrepreneurs in Portugal",
  "type": "module",
  "private": true,
  "engines": {
    "node": ">=22.17.1",
    "npm": ">=10.0.0"
  },
  "scripts": {
    "dev": "concurrently \"vite dev --port 5173\" \"eleventy --serve --watch --incremental --config=.eleventy.ts\" \"netlify functions:serve --port 3000\" --kill-others-on-fail --names=\"assets,11ty,backend\"",
    "build": "rm -rf _site && NODE_ENV=production vite build && eleventy --config=.eleventy.ts",
    "preview": "npm run build && npx serve _site",
    "lint": "eslint . --ext .ts",
    "type-check": "tsc -p tsconfig.typecheck.json --pretty false",
    "test": "vitest run",
    "verify-apis": "tsx scripts/verify-apis.ts"
  },
  "keywords": [
    "landing-page",
    "eleventy",
    "11ty",
    "entrepreneurship",
    "business-event",
    "portugal"
  ],
  "author": "Café com Vendas",
  "license": "ISC",
  "dependencies": {
    "@netlify/functions": "^4.2.2",
    "dotenv": "^17.2.1",
    "stripe": "^18.4.0"
  },
  "devDependencies": {
    "@11ty/eleventy": "^3.1.2",
    "@eslint/js": "^9.33.0",
    "@playwright/test": "^1.55.0",
    "@tailwindcss/vite": "^4.1.12",
    "@types/node": "^24.3.0",
    "@typescript-eslint/eslint-plugin": "^8.40.0",
    "@typescript-eslint/parser": "^8.40.0",
    "concurrently": "^9.2.0",
    "eslint": "^9.33.0",
    "globals": "^16.3.0",
    "happy-dom": "^18.0.1",
    "tailwindcss": "^4.1.12",
    "tsx": "^4.20.4",
    "typescript": "^5.9.2",
    "vite": "^7.1.3",
    "vitest": "^3.2.4"
  }
}
