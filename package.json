{
  "name": "cafe-com-vendas-landing",
  "version": "1.0.0",
  "description": "Landing page for Café com Vendas event - an intimate business event for female entrepreneurs in Portugal",
  "type": "module",
  "private": true,
  "engines": {
    "node": ">=22.17.1",
    "npm": ">=10.0.0"
  },
  "scripts": {
    "clean": "node -e \"const fs=require('fs'); fs.rmSync('_site', {recursive:true, force:true})\"",
    "tokens:build": "node scripts/build-tokens.js",
    "build:css": "postcss ./src/assets/css/main.css -o ./_site/tailwind.css",
    "build:js": "cross-env NODE_ENV=production vite build",
    "build:js:dev": "cross-env NODE_ENV=development vite build",
    "eleventy": "eleventy",
    "eleventy:serve": "eleventy --serve --watch",
    "dev": "npm run tokens:build && npm run build:css && npm run build:js:dev && npm run eleventy:serve",
    "build": "npm run clean && npm run tokens:build && npm run build:css && npm run build:js && npm run eleventy",
    "start": "npm run dev",
    "preview": "npm run build && npx serve _site",
    "dev:netlify": "netlify dev",
    "versions": "npm list --depth=0",
    "outdated": "npm outdated",
    "update": "npm update"
  },
  "keywords": [
    "landing-page",
    "eleventy",
    "11ty",
    "entrepreneurship",
    "business-event",
    "portugal"
  ],
  "author": "Café com Vendas",
  "license": "ISC",
  "dependencies": {
    "@fontsource/lora": "^5.2.6",
    "stripe": "^18.4.0"
  },
  "devDependencies": {
    "@11ty/eleventy": "^3.0.0",
    "@tailwindcss/postcss": "^4.1.11",
    "autoprefixer": "^10.4.21",
    "cross-env": "^10.0.0",
    "postcss": "^8.5.6",
    "postcss-cli": "^11.0.1",
    "tailwindcss": "^4.1.11",
    "terser": "^5.43.1",
    "vite": "^7.1.2"
  }
}
